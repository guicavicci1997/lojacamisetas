<% if flash[:notice] %>
<div class="alert alert-success role="alert" ><%= flash[:notice] %></div>
<% end %>

<table class ="table table-bordered">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Descricao</th>
            <th>Preco</th>
        </tr>
    </thead>
    <tbody>
      <%= render @produtos_por_nome %>
    </tbody>
</table>

<table>
    <thead>
        <tr>
            <th>Nome</th>
            <th>Descricao</th>
            <th>Preco</th>
            <th>Quantidade</th>
        </tr>
    </thead>
    <tbody>
        <% @produtos_por_preco.each do |produto| %>
        <tr>
            <td> <%= produto.nome %> </td>
            <td> <%= produto.descricao %> </td>
            <td> <%= produto.preco %> </td>
            <td> <%= produto.quantidade %> </td>
        </tr>
        
        <% end %>
    </tbody>
</table>

<%= link_to "Criar novo produto", new_produto_path %>
